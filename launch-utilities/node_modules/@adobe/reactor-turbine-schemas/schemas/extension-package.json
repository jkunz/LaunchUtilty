{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "#/definitions/name"
    },
    "version": {
      "$ref": "#/definitions/semver"
    },
    "cdnPath": {
      "type": "string",
      "format": "uri"
    },
    "displayName": {
      "$ref": "#/definitions/displayName"
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "iconPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.svg$"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "$ref": "#/definitions/url"
        },
        "email": {
          "$ref": "#/definitions/email"
        }
      },
      "required": [
        "name"
      ]
    },
    "viewBasePath": {
      "$ref": "#/definitions/basePath"
    },
    "hostedLibFiles": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/libPath"
      }
    },
    "configuration": {
      "type": "object",
      "properties": {
        "viewPath": {
          "$ref": "#/definitions/viewPath"
        },
        "schema": {
          "type": "object"
        },
        "transforms": {
          "$ref": "#/definitions/transforms"
        }
      },
      "additionalProperties": false,
      "required": [
        "viewPath",
        "schema"
      ]
    },
    "events": {
      "$ref": "#/definitions/features"
    },
    "conditions": {
      "$ref": "#/definitions/features"
    },
    "actions": {
      "$ref": "#/definitions/features"
    },
    "dataElements": {
      "$ref": "#/definitions/features"
    },
    "sharedModules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/definitions/name"
          },
          "libPath": {
            "$ref": "#/definitions/libPath"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "libPath"
        ]
      }
    },
    "main": {
      "$ref": "#/definitions/libPath"
    },
    "exchangeUrl" : {
      "type": "string",
      "minLength": 1,
      "pattern": "^https:\\/\\/(?:(?:experiencecloud|www)\\.)?adobeexchange\\.com"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "version",
    "displayName",
    "description",
    "author",
    "viewBasePath"
  ],
  "definitions": {
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?![_\\.])[a-z0-9~_\\-\\.]{1,214}$"
    },
    "displayName": {
      "type": "string",
      "minLength": 1
    },
    "basePath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+$"
    },
    "libPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.js$"
    },
    "viewPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.html([?#].*)?$"
    },
    "url": {
      "type": "string",
      "minLength": 1,
      "format": "uri"
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "format": "email"
    },
    "semver": {
      "type": "string",
      "minLength": 1,
      "pattern": "^\\bv?(?:0|[1-9][0-9]*)(?:\\.(?:0|[1-9][0-9]*)){2}(?:-[\\da-z\\-]+(?:\\.[\\da-z\\-]+)*)?(?:\\+[\\da-z\\-]+(?:\\.[\\da-z\\-]+)*)?\\b$"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/definitions/name"
          },
          "displayName": {
            "$ref": "#/definitions/displayName"
          },
          "categoryName": {
            "$ref": "#/definitions/displayName"
          },
          "libPath": {
            "$ref": "#/definitions/libPath"
          },
          "viewPath": {
            "$ref": "#/definitions/viewPath"
          },
          "schema": {
            "type": "object"
          },
          "transforms": {
            "$ref": "#/definitions/transforms"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "displayName",
          "libPath",
          "schema"
        ]
      }
    },
    "transforms": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "type": {
                "enum": [
                  "file"
                ]
              },
              "propertyPath": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false,
            "required": [
              "type",
              "propertyPath"
            ]
          },
          {
            "properties": {
              "type": {
                "enum": [
                  "function"
                ]
              },
              "propertyPath": {
                "type": "string",
                "minLength": 1
              },
              "parameters": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "additionalProperties": false,
            "required": [
              "type",
              "propertyPath"
            ]
          },
          {
            "properties": {
              "type": {
                "enum": [
                  "customCode"
                ]
              }
            }
          }
        ]
      }
    }
  }
}
